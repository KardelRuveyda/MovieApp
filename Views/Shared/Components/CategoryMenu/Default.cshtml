@model IEnumerable<Category>


@foreach (var category in Model)
{
    <div class="list-group">
    <a  asp-controller="Home" asp-action="Index" 
    asp-route-id = "@category.Id" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==category.Id.ToString()?"active":"")">
        @category.Name  
    </a>
</div>
}    
